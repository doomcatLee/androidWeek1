<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doomcat.twilioapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Twilio App"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="190sp"
        android:background="@android:color/holo_red_light"
        android:text="Sign Up"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="220sp"
        android:background="@android:color/holo_green_dark"
        android:text="Log In"
        android:layout_alignBottom="@+id/signUpButton"
        android:layout_toEndOf="@+id/signUpButton"
        android:layout_alignTop="@+id/signUpButton" />

    <EditText
        android:id="@+id/userNameEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Username"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/passwordEditText1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/passwordEditText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userNameEditText1"
        android:layout_alignStart="@+id/userNameEditText1" />
</RelativeLayout>
